<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/unresolved"
            android:layout_margin="6dp"
            android:layout_alignParentRight="true" android:src="@drawable/red_circle" android:visibility="visible"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/sender_name" android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/unresolved"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/msg_stub" android:layout_below="@+id/sender_name"
            android:layout_toLeftOf="@+id/unresolved"
            android:singleLine="true"/>
</RelativeLayout>